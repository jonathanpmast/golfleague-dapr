{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-score-service",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/golfleague.ScoreService/golfleague.ScoreService.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build-roster-service",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/golfleague.RosterService/golfleague.RosterService.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Dapr Score Service",
            "command": "dapr",
            "args": [
                "run",
                "--app-id",
                "score-service",
                "--app-port",
                "5100",
                "--dapr-http-port",
                "5110",
                "--dapr-grpc-port",
                "5120",
                "--placement-host-address",
                "localhost:50005",
                "--components-path",
                "${workspaceFolder}/components/local"
            ]
        },
        {
            "label": "Dapr Roster Service",
            "command": "dapr",
            "args": [
                "run",
                "--app-id",
                "roster-service",
                "--app-port",
                "5200",
                "--dapr-http-port",
                "5210",
                "--dapr-grpc-port",
                "5220",
                "--placement-host-address",
                "localhost:50005",
                "--components-path",
                "${workspaceFolder}/components/local"
            ]
        }
    ]
}