{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-score-service",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/golfleague.ScoreService/golfleague.ScoreService.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/golfleague.ScoreService/golfleague.ScoreService.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/golfleague.ScoreService/golfleague.ScoreService.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "appId": "score-service",
            "label": "daprd-down-score-service",
            "type": "daprd-down"
        },
        {
            "label": "Dapr Score Service",
            "command": "dapr",
            "args": [
                "run",
                "--app-id",
                "score-service",
                "--app-port",
                "5100",
                "--dapr-http-port",
                "5110",
                "--dapr-grpc-port",
                "5120",
                "--placement-host-address",
                "localhost:50005",
                "--components-path",
                "${workspaceFolder}/components/local"
            ]
        }
    ]
}